<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LoginFragment"
    android:id="@+id/loginFragment"
    android:background="@color/backgroundColor">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Welcome back!"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="We're so excited to see you again!"
            android:textColor="#B6B9C0"
            android:textSize="13sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/txt_des3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Account Information"
        android:textAllCaps="true"
        android:textColor="#B6B9C0"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/peping" />

    <EditText
        android:id="@+id/ed_email_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_des3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="#1F1F22"
        android:hint="Email or Phone Number"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#B6B9C0"
        android:textColorHint="#B6B9C0"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_email_phone"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="#1F1F22"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#B6B9C0"
        android:textColorHint="#B6B9C0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_Forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_pass"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Forgot your Password?"
        android:textColor="#4BA7F4"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Forgot_password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#5A64EA"
        android:text="@string/btb_log_in"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>