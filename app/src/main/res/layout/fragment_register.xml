<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterFragment"
    android:orientation="vertical"
    android:id="@+id/registerFragment"
     android:background="@color/backgroundColor">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Welcome back!"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="We're so excited to see you again!"
            android:textColor="#B6B9C0"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/txt_des3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Account Information"
            android:textAllCaps="true"
            android:textColor="#B6B9C0"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/pngegg" />

    </RelativeLayout>

    <EditText
        android:id="@+id/ed_ForgotEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#1F1F22"
        android:hint="Email or Phone Number"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#B6B9C0"
        android:textColorHint="#B6B9C0"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ed_ForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="#1F1F22"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#B6B9C0"
        android:textColorHint="#B6B9C0"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ed_ConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="#1F1F22"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#B6B9C0"
        android:textColorHint="#B6B9C0"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_haveAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Already have Account?, "
            android:textColor="#B6B9C0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_haveAcc"
            android:text="click Here"
            android:textColor="#4BA7F4"
            android:textSize="12sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_resgister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#5A64EA"
        android:text="@string/btn_resgister"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>