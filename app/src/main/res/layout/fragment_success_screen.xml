<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".fragment.SuccessScreenFragment">

<ImageView
    android:id="@+id/imgSuccess"
    android:layout_width="125dp"
    android:layout_height="125dp"
    android:src="@drawable/ic_success"
    android:layout_centerInParent="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Order has been successfully placed"
    android:textSize="16sp"
    android:textColor="@color/white"
    android:layout_below="@id/imgSuccess"
    android:layout_centerInParent="true"/>


<Button
    android:id="@+id/btnOk"
    android:layout_width="120dp"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    android:layout_marginBottom="30dp"
    android:text="OK"
    android:background="#A0AA3E"
    android:backgroundTint="#A0AA3E"/>
</RelativeLayout>